extends layout

block content
 form(method="GET" action="/search")
    input(type="text" placeholder="Search" name="search" value="#{search}") 
    button(onclick="window.location.href='/search'") search
 -var results = result
 div
   table.table.table-hover
    thead
      tr: th Seeds
      //th id
      th variety
      th name
      th category
      th link
    tbody
      each seed in results
        tr
          //td #{seed._id}
          td #{seed._source.variety}
          td #{seed._source.name}
          td #{seed._source.category}
          td
            a(href="#{seed._source.url}" target="_blank") #{seed._source.manufacturer}
          //td=JSON.stringify(seed.prices)